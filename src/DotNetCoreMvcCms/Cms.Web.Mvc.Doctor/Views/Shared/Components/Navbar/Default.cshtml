@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Cms.Data.Models.Entities.NavbarEntity>

<nav class="navbar navbar-expand-lg navigation" id="navbar">
    <div class="container">
        <a asp-controller="Home" asp-action="Index" class="navbar-brand">
            <img src="~/images/logo.png" alt="" class="img-fluid">
        </a>

        <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarmain"
                aria-controls="navbarmain" aria-expanded="false" aria-label="Toggle navigation">
            <span class="icofont-navigation-menu"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarmain">
            <ul class="navbar-nav ml-auto">
                @foreach (var item in Model)
                {
                    @if (item.Name == "Home")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    }
                    else if (item.Name == "About")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="About" asp-action="Index">About</a>
                        </li>
                    }
                    else if (item.Name == "Services")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Service" asp-action="Index">Services</a>
                        </li>
                    }
                    else if (item.Name == "Departments")
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="departmentDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Department
                            </a>
                            <div class="dropdown-menu" aria-labelledby="departmentDropdown">
                                <a class="dropdown-item" asp-controller="Departments" asp-action="Index">Departments</a>
                                <a class="dropdown-item" asp-controller="Departments" asp-action="Detail">Departments Detail</a>
                            </div>
                        </li>
                    }
                    else if (item.Name == "Doctors")
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="doctorsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Doctors
                            </a>
                            <div class="dropdown-menu" aria-labelledby="doctorsDropdown">
                                <a class="dropdown-item" asp-controller="Doctor" asp-action="Index">Doctors</a>
                                <a class="dropdown-item" asp-controller="Doctor" asp-action="Detail">Doctors Detail</a>
                            </div>
                        </li>
                    }
                    else if (item.Name == "Blog")
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="blogDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Blog
                            </a>
                            <div class="dropdown-menu" aria-labelledby="blogDropdown">
                                <a class="dropdown-item" asp-controller="Blog" asp-action="Index">Blog</a>
                                <a class="dropdown-item" asp-controller="Blog" asp-action="Detail">Blog Detail</a>
                            </div>
                        </li>
                    }
                    else if (item.Name == "Contact")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</nav>
